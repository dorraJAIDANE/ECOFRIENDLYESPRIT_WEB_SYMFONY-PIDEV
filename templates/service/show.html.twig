{% extends 'back.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/ServiceForm.css') }}">

    <section class="form-container" id="contact">

        <h1>Service</h1>

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Service number</th>
                        <td>{{ service.serviceid }}</td>
                    </tr>
                    <tr>
                        <th>Servicename</th>
                        <td>{{ service.servicename }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ service.price }}</td>
                    </tr>
                    <tr>
                        <th>Service Image</th>
                        <td>
                            {% if service.img %}
                                <img src="{{ asset('uploads/images/' ~ service.img) }}" alt="Service Image" class="img-fluid">
                            {% else %}
                                No Image
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>

                <div class="button-group">
                    <a href="{{ path('app_service_index') }}" class="btn bg-warning">Back to List</a>
                    <a href="{{ path('app_service_edit', {'serviceid': service.serviceid}) }}" class="btn bg-info ">Edit</a>
                    {{ include('service/_delete_form.html.twig') }}
                </div>
            </div>
        </div>

    </section>
{% endblock %}
