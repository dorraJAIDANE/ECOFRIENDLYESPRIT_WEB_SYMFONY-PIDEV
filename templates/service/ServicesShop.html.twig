                                            .down-content {
                                                margin-top: 15px; /* Add space between image and text */
                                            }

                                            .btn-group {
                                                display: flex; /* Make buttons side by side */
                                                justify-content: space-between; /* Add space between buttons */
                                            }

                                            .btn {
                                                width: 48%; /* Set a width to make buttons fit in the container with a small gap */
                                            }
                                        </style>

                                    {% for flashMessage in app.flashes('success') %}
                                        <div class="alert alert-success" role="alert">
                                            {{ flashMessage }}
                                        </div>
                                    {% endfor %}

                                    <div class="row" id="search-results">
                                                        {% for service in services %}
