{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .card {
            width: 18rem;
            margin: 10px;
            border: 2px solid #007bff; /* Add a border color */
            border-radius: 10px; /* Add border-radius for rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
        }
        .card-img-top {
            max-height: 200px;
            object-fit: cover;
            border-bottom: 1px solid #ddd; /* Add a border to separate image and content */
        }
        .card-body {
            text-align: center;
            color: #333; /* Text color */
        }
        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #007bff; /* Title color */
            margin-bottom: 10px; /* Add margin to separate title and other content */
        }
        .card-text {
            color: #555; /* Text color */
            margin-bottom: 8px; /* Add margin to separate lines of text */
        }
        .btn-primary {
            background-color: #007bff; /* Primary button color */
            border-color: #007bff; /* Button border color */
        }
        .btn-primary:hover {
            background-color: #0056b3; /* Button color on hover */
            border-color: #0056b3; /* Button border color on hover */
        }
        .btn-danger {
            background-color: #dc3545; /* Danger button color */
            border-color: #dc3545; /* Button border color */
        }
        .btn-danger:hover {
            background-color: #bd2130; /* Button color on hover */
            border-color: #bd2130; /* Button border color on hover */
        }
    </style>

    <section class="upcoming-meetings" id="meetings">
        <div class="example-wrapper">
            <h1>Search Results for "{{ query }}"</h1>
            <div class="row">
                {% if d %}
                    {% for document in d %}
                        <div class="card">
                            {% if document.getDocument() is not null %}
                                <img src="{{ asset("uploads/images/" ~ document.getDocument()) }}" class="card-img-top" alt="Document Image">
                            {% else %}
                                <p>No image available</p>
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ document.documentName }}</h5>
                                <p class="card-text">{{ document.documentType }}</p>
                                <p class="card-text">{{ document.niveau }} - {{ document.semestre }}</p>
                            
                                
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>No results found.</p>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
