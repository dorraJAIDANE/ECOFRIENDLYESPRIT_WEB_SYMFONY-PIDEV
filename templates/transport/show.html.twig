{% extends 'back.html.twig' %}

{% block title %}Transport{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: black;
            color: white;
            font-family: Arial, sans-serif;
        }
        .container {
             margin-top:110px;
            max-width: 800px;
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
        }
        /* Style pour le titre */
        h1 {
            color: red;
        }
        /* Style pour la table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid white;
        }
        th {
            background-color: rgba(0, 0, 0, 0.5);
        }
        tr:nth-child(even) {
            background-color: rgba(0, 0, 0, 0.2);
        }
        tr:nth-child(odd) {
            background-color: rgba(0, 0, 0, 0.4);
        }
        /* Style pour les liens */
        .action-link {
            color: white;
            text-decoration: none;
            margin-right: 10px;
        }
        .action-link:hover {
            color: red;
        }
        /* Style pour les boutons */
        .btn {
            padding: 8px 12px;
            border: none;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }
        .btn-primary {
            background-color: red; /* Red color */
        }
        .btn-secondary {
            background-color: #333; /* Dark gray color */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Transport</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ transport.id }}</td>
                </tr>
                <tr>
                    <th>NbrePlaces</th>
                    <td>{{ transport.nbrePlaces }}</td>
                </tr>
                <tr>
                    <th>TypeTransport</th>
                    <td>{{ transport.typeTransport }}</td>
                </tr>
                <tr>
                    <th>Disponibilite</th>
                    <td>{{ transport.disponibilite }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_transport_index') }}" class="btn btn-secondary">Back to List</a>

        <a href="{{ path('app_transport_edit', {'id': transport.id}) }}" class="btn btn-primary">Edit</a>

        {{ include('transport/_delete_form.html.twig') }}
    </div>
{% endblock %}