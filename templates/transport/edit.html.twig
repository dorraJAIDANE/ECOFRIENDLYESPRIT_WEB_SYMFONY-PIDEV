{% extends 'back.html.twig' %}

{% block title %}Edit Transport{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: black;
            color: white;
            font-family: Arial, sans-serif;
        }
        .container {
             margin-top:110px;
            max-width: 800px;
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
        }
        /* Style pour le titre */
        h1 {
            color: red;
        }
        /* Style pour la table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid white;
        }
        th {
            background-color: rgba(0, 0, 0, 0.5);
        }
        tr:nth-child(even) {
            background-color: rgba(0, 0, 0, 0.2);
        }
        tr:nth-child(odd) {
            background-color: rgba(0, 0, 0, 0.4);
        }
        /* Style pour les liens */
        .action-link {
            color: white;
            text-decoration: none;
            margin-right: 10px;
        }
        .action-link:hover {
            color: red;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit Transport</h1>

        <!-- Your form or content for editing transport details goes here -->
        {{ include('transport/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('app_transport_index') }}" class="action-link">back to list</a>

        {{ include('transport/_delete_form.html.twig') }}
    </div>
{% endblock %}