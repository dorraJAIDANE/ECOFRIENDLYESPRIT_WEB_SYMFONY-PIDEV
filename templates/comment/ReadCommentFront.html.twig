{% extends 'base.html.twig' %}

{% block title %} List Comments {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        
        .list-container {
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .card {
            margin-bottom: 20px;
            width: 1100px;
            height: auto;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card:hover {
        transform: scale(1.1); /* Ajustez la valeur selon vos préférences d'agrandissement */
    }

        .down-content {
            padding: 20px;
            display: flex;
            flex-direction: column; /* Mettez le contenu dans une colonne */
            align-items: flex-start; /* Alignez les éléments à gauche */
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .user-name {
            margin-right: 10px;
            font-size: 25px;
            color: #B22222;
        }

        .post-date {
            align-self: flex-end; /* Alignez la date à la fin de la colonne (à droite) */
            color: #e74c3c; /* Rouge */
        }

        .post-description {
            padding-left: 25px;
            text-align: left;
        }

        .action-bar {
            display: flex;
            align-items: center;
        }

        .action-list {
            display: flex;
            gap: 10px;
            margin-right: 10px;
        }

        .comment-count {
            padding-left: 600px;
            margin-right: 10px;
        }
    </style>

    <section class="contact-us" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="filters">
                                <div style="text-align: right; padding:20px 20px 50px 20px; display: flex; ">
                                    <div class="list-container">
                                        {% for comment in c %}
                                            <div class="card">
                                                <div class="down-content">
                                                    <div class="user-info">
                                                        <h2 class="user-name">{{ comment.getUser().getPrenomuser() }} {{ comment.getUser().getNomuser() }}</h2>
                                                        <h6 class="post-date" style="padding-left: 750px;">{{ comment.dateCreationComment|date('Y-m-d') }}</h6>
                                                    </div>
                                                    <p class="post-description">{{ comment.descriptionComment }}</p>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
