
 {% extends 'back.html.twig' %}
{% block title %}Edit Ticket{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: black;
            color: white;
            font-family: Arial, sans-serif;
        }
        .container {
             margin-top:110px;
            max-width: 800px;
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
        }
        /* Style pour le titre */
        h1 {
            color: red;
        }
        /* Style pour les liens */
        .action-link {
            color: white;
            text-decoration: none;
            margin-right: 10px;
        }
        .action-link:hover {
            color: red;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit Ticket</h1>

        {{ include('ticket/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('app_ticket_index') }}" class="action-link">back to list</a>

        {{ include('ticket/_delete_form.html.twig') }}
    </div>
{% endblock %}

