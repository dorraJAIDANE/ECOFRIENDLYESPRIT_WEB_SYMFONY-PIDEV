{# templates/maps/directions.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map Directions</title>

    <style>
        /* Assurez-vous que le conteneur de la carte prend toute la largeur */
        body, html {
            height: 100%;
            margin: 0;
        }
        #map {
            height: 100%;
            width: 100%;
        }
    </style>
</head>
<body>

<div id="map"></div>

<script>
    function initMap() {
        // Coordonnées de votre université
        var universityCoordinates = {{ universityCoordinates | json_encode | raw }};

        // Initialiser la carte
        var map = new google.maps.Map(document.getElementById('map'), {
            center: universityCoordinates,
            zoom: 15
        });

        // Ajouter un marqueur pour l'université
        var universityMarker = new google.maps.Marker({
            position: universityCoordinates,
            map: map,
            title: 'Votre Université'
        });
    }
</script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBG05iB0DYOaK3cJSUUvwxSNJ7TE4TLw9A&callback=initMap" async defer></script>

</body>
</html>
