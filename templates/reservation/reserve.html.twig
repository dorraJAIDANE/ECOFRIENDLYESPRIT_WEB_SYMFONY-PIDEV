{% extends 'base.html.twig' %}

{% block title %}Réservation de Ticket{% endblock %}

{% block body %}
    <div style="margin-top: 100px; display: flex; flex-direction: column; align-items: center; text-align: center;">
        <h1 style="color: red;">Réservation de Ticket</h1>

        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
            <div style="text-align: left; width: 45%;">
                {{ form_start(form) }}
                
                <div style="margin-bottom: 20px;">
                    {{ form_row(form.lieuDepart) }}
                </div>
                
                <div style="margin-bottom: 20px;">
                    {{ form_row(form.lieuArrive) }}
                </div>
                
                <div style="margin-bottom: 20px;">
                    {{ form_row(form.dateTicket) }}
                </div>

                <div style="margin-bottom: 20px; text-align: left;">
                    <button type="submit" class="btn btn-primary">Rechercher les Tickets disponibles</button>
                </div>
                {{ form_end(form) }}

                <div style="margin-top: 40px; text-align: left;">
                    <button type="button" class="btn btn-success" onclick="window.location.href='{{ path('statistics_show') }}'">Voir les statistiques</button>
                </div>

                <div style="margin-top: 40px; text-align: left;">
                    <a href="{{ path('directions') }}" class="btn btn-secondary">Maps</a>
                </div>
            </div>

            <!-- Dialogflow chatbot iframe -->
            <div style="width: 45%;">
                <iframe width="350" height="430" allow="microphone;" src="https://console.dialogflow.com/api-client/demo/embedded/906a244d-d063-4066-9db8-b3aafdc5bb4b"></iframe>
            </div>
        </div>
    </div>
{% endblock %}
