{% extends 'base.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            {% if event is not empty %}
                <div class="card">
                    {% if event.getImage() is not empty %}
                        <img src="{{ asset('uploads/images/' ~ event.getImage()) }}" class="card-img-top" alt="{{ event.getNomevent() }}">
                    {% endif %}
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item event-title">{{ event.getNomevent() }}</li>
                            <li class="list-group-item"><strong>Lieu:</strong> {{ event.getLieuevent() }}</li>
                            <li class="list-group-item"><strong>Date de début:</strong> {{ event.getDatedebutevent()|date('Y-m-d H:i:s') }}</li>
                            <li class="list-group-item"><strong>Durée:</strong> {{ event.getDuree() }}</li>
                            <li class="list-group-item"><strong>Nombre max de participants:</strong> {{ event.getNbmaxparticipant() }}</li>
                            <li class="list-group-item"><strong>Prix du ticket:</strong> {{ event.getPrixticket() }}</li>
                            <li class="list-group-item"><strong>Type d'événement:</strong> {{ event.getTypeevent() }}</li>
                            <li class="list-group-item"><strong>Nombre actuel de participants:</strong> {{ event.getNbParticipants() }}</li>
                            <li class="list-group-item"><strong>Description Event:</strong> {{ event.getDescriptionevent() }}</li>
                        </ul>
                        <div class="text-center mt-4">
                           <a href="{{ path('panier', {'i': event.idEvent}) }}" class="btn btn-primary"><i class="fas fa-shopping-cart"></i>Panier</a>
                           </a>
                           <a href="{{ path('affichecard') }}" class="btn btn-primary">
                               <i class="fas fa-arrow-left"></i> Return
                           </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info mt-4" role="alert">
                    Aucun événement trouvé.
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .card {
        border: 2px solid #007bff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .event-title {
        font-weight: normal;
        font-size: 1.5rem;
        margin-bottom: 10px;
    }
</style>

{% endblock %}
